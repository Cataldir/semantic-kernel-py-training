    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "justMyCode": false,
            "autoReload": {
                "enable": true,
                "pattern": [
                    "**/*.py"
                ]
            },
            "args": [
                "app.main:app",
                "--reload",
                "--port",
                "8000"
            ]
        }
    ]
}